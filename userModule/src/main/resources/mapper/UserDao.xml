<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bluemsun.dao.UserDao">
<resultMap id="userMap" type="com.bluemsun.entity.User">
<id column="user_id" property="userId"/>
<result column="user_name" property="userName"/>
    <result column="password" property="password"/>
    <result column="true_name" property="trueName"/>
    <result column="student_code" property="studentCode"/>
    <result column="status" property="status"/>
    <result column="available" property="available"/>
</resultMap>
<insert id="uploadRegisterInfo" >
INSERT INTO
tb_user(user_name,password,true_name,student_code,status,available)
VALUES
(#{userName},#{password},#{trueName},#{studentCode},0,0)
</insert>
<select id="checkOutUserName" parameterType="String" resultType="int">
        SELECT COUNT(*)
        FROM tb_user
        WHERE user_name =#{userName}
</select>
<select id="checkOutStudentCode" parameterType="int" resultType="int">
            SELECT COUNT(*)
        FROM tb_user
        WHERE student_code =#{studentCode}
</select>
    <select id="CheckLogin"  resultMap="userMap">
         SELECT user_id,available
        FROM tb_user
        WHERE password =#{password}
        and user_name = #{userName}
    </select>
    <select id="getUserInfo" resultMap="userMap">
        SELECT user_id,user_name,true_name,student_code,status,available
        FROM tb_user
        where user_id =#{userId}
    </select>
    <select id="listNowUser" parameterType="int" resultMap="userMap">
        SELECT user_id,user_name,true_name,student_code,status,available
        FROM tb_user
        order by available desc , status desc
        LIMIT #{startIndex},#{pageSize};
    </select>
    <update id="UpdateUserAvailableAndStatus" >
        update tb_user
        set status =#{status},available=#{available}
        where user_id=#{userId}
    </update>
<update id="UpdateUserPassword">
    update tb_user
    <set>
        <if test="password !=null">password=#{password}</if>
    </set>
    where user_id=#{userId}
</update>
    <select id="getUserCount" resultType="int">
        select COUNT(*)
        from tb_user
    </select>
<select id="CheckUserPassword" resultType="int">
    select COUNT(*)
    from tb_user
    where password=#{password}
</select>
</mapper>